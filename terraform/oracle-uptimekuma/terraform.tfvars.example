# Copy this file to terraform.tfvars and fill in your OCI values

# OCI auth
region           = "us-ashburn-1"
tenancy_ocid     = "ocid1.tenancy.oc1..example"
user_ocid        = "ocid1.user.oc1..example"
compartment_ocid = "ocid1.compartment.oc1..example"
fingerprint      = "aa:bb:cc:dd:ee:ff:11:22:33:44:55:66:77:88:99:00"
private_key_path = "/home/matt/.oci/oci_api_key.pem"

# Instance access
ssh_public_key = "ssh-ed25519 AAAA..."
ssh_user       = "ubuntu"

# Always Free shape (E2.1.Micro). For Arm A1 Flex set flex_shape = true.
shape      = "VM.Standard.E2.1.Micro"
flex_shape = false
flex_ocpus = 1
flex_memory_gbs = 6

# Image OCID for your region (Ubuntu recommended)
image_ocid = "ocid1.image.oc1..example"

# Optional networking overrides
vcn_cidr    = "10.0.0.0/16"
subnet_cidr = "10.0.1.0/24"

