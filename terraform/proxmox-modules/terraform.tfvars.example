## Proxmox API Configuration
proxmox_api_url = "https://bd790i.local:8006/api2/json"
# proxmox_token_id = "terraform@pam!terraform"  # Set via environment variable
# proxmox_token_secret = "xxx-xxx-xxx"          # Set via environment variable
proxmox_tls_insecure = true

## Template
clone_template = "ubuntu-cloud"
target_node    = "um773a"

## Cloud-init
cloud_init_user      = "homelab"
# cloud_init_password = "change-me"  # Set via environment variable

## Network
bridge_name = "vmbr0"
vlan_tag    = 2

## Control VM
create_control_vm    = false
control_vm_name      = "k3s-control"
control_vmid         = 100
control_cores        = 8
control_memory       = 8192  # MB
control_disk_size    = "40G"
control_ipconfig     = "ip=dhcp"

