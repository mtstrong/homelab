## Proxmox API Configuration
proxmox_api_url = "https://192.168.1.100:8006/api2/json"
# proxmox_token_id = "terraform@pam!terraform"  # Set via environment variable
# proxmox_token_secret = "xxx-xxx-xxx"          # Set via environment variable
proxmox_tls_insecure = true

## Template
clone_template = "ubuntu-22.04-cloud"
target_node    = "um773a"

## Cloud-init
cloud_init_user = "ubuntu"
# cloud_init_password = "change-me"

## K3S Web Node
create_web_vms = false
web_vm_id      = 200
web_cores      = 4
web_memory     = 4096  # MB
web_disk_size  = "50G"
web_ipconfig   = "ip=192.168.1.200/24,gw=192.168.1.1"

## K3S Worker Nodes
create_worker_vms = false
